{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugger: Web Docker",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "127.0.0.1",
            "pathMappings": [
                {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/code"
                }
            ]
        },
        {
            "name": "Docker: Run Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "runtests",
                "--",
                "--integration"
            ],
        },
        {
            "name": "Docker: Build Web",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "build",
                "web"
            ],
        },
        {
            "name": "Docker: Run Application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "up",
                // "-d"
            ],
        },
        {
            "name": "Docker: Down Application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "down",
            ],
        },
        {
            "name": "Postgres: Init DB",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "init-postgres",
            ],
        },
        {
            "name": "Postgres: Login DB",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "exec",
                "db",
                "psql",
                "-U",
                "postgres",
                "-d",
                "application"
            ],
        },
    ]
}