{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Run Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "runtests",
                "--",
                "--integration"
            ],
        },
        {
            "name": "Docker: Build Web",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "build",
                "web"
            ],
        },
        {
            "name": "Docker: Run Application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "up",
                // "-d"
            ],
        },
        {
            "name": "Docker: Down Application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "compose",
                "down",
            ],
        },
    ]
}